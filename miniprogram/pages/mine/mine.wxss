/* pages/mine/mine.wxss */

.box {
  width: 90%;
  margin: auto;
  background: #fff;
  text-align: center;
  margin-top: 50rpx;
  padding: 30rpx;
  border-radius: 20rpx;
  box-sizing: border-box;
  box-shadow: 0px 0px 10px #ccc;
}

.bold {
  font-weight: bold;
  text-align: center;
  color: #ccc;
}

span {
  width: 48rpx;
  height: 48rpx;
  border-radius: 24rpx;
  background-color: #0527af;
  display: inline-block;
  text-align: center;
  color: #fff;
}

.text-con {
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  margin-top: 20rpx;
}

.text {
  text-align: left;
  margin-top: 50rpx;

}

/*分割线样式*/

.divLine {
  background: #e0e3da;
  margin-top: 10px;
  width: 100%;
  height: 5rpx;
}

.text_one {
  line-height: 25px;
}

.btn1 {
  width: 200rpx;
  height: 200rpx;
  margin-top: 20rpx;
  background-color: white;
  color: #999;
  border-radius: 0rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  font-size: 30rpx;
  position: fixed;
  bottom: 19px;
  left: 50%;
  transform: translateX(-50%);
}

.btnImg {
  width: 100rpx;
  height: 100rpx;
}

.img_loading {
  margin-left: 165px;
  width: 50px;
  height: 40px;
}
