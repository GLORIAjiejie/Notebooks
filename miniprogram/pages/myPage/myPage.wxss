.container {
  display: flex;
  height: 100%;
  width: 100%;
  flex-direction: column;
  justify-content: center;
}

.avs {
  opacity: 0.9;
  width: 200rpx;
  height: 200rpx;
  margin-top: 160rpx;
}

.username {
  font-size: 32rpx;
  font-weight: bold;
  margin-top: 200rpx;
}

.moto-container {
  line-height: normal;
  border: 1px solid #450f80;
  width: 200rpx;
  height: 80rpx;
  border-radius: 5px;
  text-align: center;
  margin-top: 200rpx;
  padding: 0px;
  outline: none;
}

.moto {
  font-size: 22rpx;
  font-weight: bold;
  line-height: 80rpx;
  text-align: center;
  color: #450f80;
}

.header{
  display: flex;
  flex-direction: row;
  align-items: center;
  position: relative;
}
.userContent{
  position: absolute;
z-index: 1;
display: flex;
flex-direction: column;
align-items: center;
justify-content: center;
width: 76%;
height: 70%;
background-color: #fff;
border-radius: 5%;
left: 50%;
top: 50%;
transform: translateX(-50%);
box-shadow: 0 1rpx 6rpx rgba(0, 0, 0, 0.1);
}
.touxiang {
  width: 30%;
  border-radius: 50%;
  right:7%;
  /* position: absolute; */
}
.remind_font{
  color:#1c7df3;
  font-size: 40;
}
page {
  height: 100%;
  position: fixed;
}
.page_body{
  margin-top: 23%;
}
.cover {
  width: 100%;
  height:1000rpx;
  background-color: white;

}
.view_bottom {
  position: absolute;
  bottom: 2%;
  width: 100%;
  height: 70rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
}

.comment-visiable {
  width: 90%;
  height: 400rpx;
  margin-left: 5%;
}

.comment {
  background-color: blue;
  width: 90%;
  height: 250rpx;
  margin-left: 5%;
  display: none;
  position: relative;
}

.button {
  font-size: 30rpx;
  background-color: rgb(252, 118, 106);
  color: white;
  line-height: 50rpx;
  border: none;
}
.button1 {
  font-size: 30rpx;
  background-color: rgb(252, 118, 106);
  color: white;
  line-height: 50rpx;
  border: none;
}

.content {
  background-color: rgb(241, 241, 241);
  margin-bottom: 2%;
  border-radius: 5rpx;
}

.small {
  font-size: 30rpx;
  color: black;
}

.scroll-view {
  height: 400rpx;
}

.input_none {
  line-height: 30rpx;
  background-color: white;
  border-bottom: 1rpx rgb(241, 241, 241) solid;
  position: fixed;
  bottom: 0;
  width: 100%;
}

.hoverBtn {
  position: relative;
  top: 3rpx;
  box-shadow: 0px 0px 8px rgb(241, 241, 241) inset;
}

.button::before {
  content: '';
  width: 0.5em;
  height: 0.5em;
  background-color: greenyellow;
  border-radius: 50%;
  border-width: thick;
  position: absolute;
  right: 0em;
}
.imgs-view{
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  
}
.imgs-view image{
  width:100%;
  position: relative
}
.imgs-item{
  width: 48%;
  padding: 5rpx;
}
